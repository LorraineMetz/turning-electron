@page "/hosts"
@inject NConfigGenerator gen;

    <div class="host-view">
        <textarea>@host</textarea>

        <style scoped>
            .host-view {
                width:100%;
                height:100%;
            }

            .host-view textarea {
                width:100%;
                min-height:70vh;
                border-radius:0px;
                border:2px solid black;
            }
        </style>
    </div>

@code {
    string host;

    protected override Task OnInitializedAsync()
    {
        host = gen.Hosts;
        gen.ModifyPatched += (s, e) =>
        {
            host = gen.Hosts;
        };
        return base.OnInitializedAsync();
    }
}
